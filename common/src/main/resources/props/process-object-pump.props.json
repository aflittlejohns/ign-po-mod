{
	"type": "object",
	"properties": {
    "pumpType":{
      "type": "string",
      "enum": [
        "centrifugal",
        "diaphragm",
        "gear",
        "liquid-ring",
        "positive-displacment",
        "positive-screw",
        "progressive-cavity"
      ],
      "default":"centrifugal",
      "description": "Pump symbol selection"
    },
    "processObject": {
      "type": "object",
      "properties":{
        "status": {
          "type": "object",
          "properties": {
            "itemName": {
              "type": "string",
              "default": "\"\"",
              "description": "Item Indentifier"
            },
            "configuration": {
              "type": "number",
              "default": 7,
              "description": "Pump configuration number"
            },
            "alarm": {
              "type": "boolean",
              "default": false,
              "description": "Alarm status"
            },
            "actFB": {
              "type": "boolean",
              "default": false,
              "description": "Activated feedback"
            },
            "deActFB": {
              "type": "boolean",
              "default": false,
              "description": "Deactivate feedback"
            },
            "manual": {
              "type": "boolean",
              "default": false,
              "description": "Manual mode"
            },
            "masked": {
              "type": "boolean",
              "default": false,
              "description": "Masked"
            },
            "changing": {
              "type": "boolean",
              "default": false,
              "description": "Changing"
            },
            "locate": {
              "type": "boolean",
              "default": false,
              "description": "Locate Item"
            }
          }
        }
      }
    },
    "showLabel": {
      "type": "boolean",
      "default": false,
      "description": "Show Item Name Popover"
    },
    "labelPosition": {
      "type": "string",
      "enum": ["left"
      , "right"
      , "top-left"
      , "top-right"
      , "bottom-left"
      , "bottom-right"
    ],
      "default": "top-left",
      "description": "Position of itemId label, relative to item location"
    },
		"style": {
      "$ref": "urn:ignition-schema:schemas/style-properties.schema.json",
			"default": {
        "classes": ""
			}
		}
	}
}
